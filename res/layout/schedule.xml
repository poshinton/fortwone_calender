<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
     android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView 
        
        android:textColor="#ffffff" 
        android:gravity="center" 
        android:id="@+id/scheduleTop" 
        android:background="@color/title_blue" 
        android:layout_width="fill_parent" 
        android:layout_height="40.0dip" 
        android:text="编辑日程" />
    <TextView 
        
        android:textColor="#ff000000" 
        android:gravity="center_vertical" 
        android:id="@+id/scheduleType" 
        android:paddingLeft="10.0dip" 
        android:paddingRight="10.0dip" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="40.0dip" 
        android:layout_marginTop="5.0dip" 
        android:drawableRight="@drawable/schedule_type" />
    <TextView 
     
        android:textColor="#ff000000" 
        android:gravity="center_vertical" 
        android:id="@+id/scheduleDate" 
        android:paddingLeft="10.0dip" 
        android:paddingRight="10.0dip" 
        android:clickable="true" 
        android:layout_width="fill_parent" 
        android:layout_height="43.0dip" 
        android:layout_marginTop="5.0dip" />
    <TextView 
        android:textColor="#252525"
        android:layout_width="fill_parent"
        android:layout_height="43.0dp"
        android:layout_marginTop="5.0dip"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/seletedtime"
        android:clickable="true"
        android:text="提醒时间：15:00"
        android:drawableRight="@drawable/schedule_type"
        android:background="#ffffff"
        android:gravity="center_vertical"/>
    <com.fortwone.borderText.BorderEditText 
        android:textColor="#ff000000" 
        android:gravity="top" 
        android:id="@+id/scheduleText" 
        android:background="@null" 
        android:paddingLeft="10.0dip" 
        android:paddingRight="10.0dip" 
        android:layout_width="fill_parent" 
        android:layout_height="280.0dip" 
        android:layout_marginTop="5.0dip" 
        android:hint="请输入你的日程..." />
    <Button
        
        android:textColor="#ffffffff"
         android:gravity="center" 
         android:id="@+id/save" 
         android:background="@drawable/yun_red" 
         android:clickable="true" 
         android:layout_width="fill_parent" 
         android:layout_height="60.0dip" 
         android:layout_marginTop="5.0dip" 
         android:text="保存" />
</LinearLayout>